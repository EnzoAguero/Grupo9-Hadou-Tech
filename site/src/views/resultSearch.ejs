<!DOCTYPE html>
<html lang="es">

  <%- include ('./partials/head')%>

  <body class="home">

    <%- include ('./partials/header')%>

    <div class="register">
      <main class="container mt-5" >
        <% if (result.length > 0) { %>
        <h3>Resultados de la búsqueda: <%= busqueda %> </h3>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Nombre del producto</th>
              <th scope="col">Marca</th>
              <th scope="col">Precio</th>
            </tr>
          </thead>
          <tbody>
            <% result.forEach(producto => { %>
            <tr>
              <td>
                <a href="/products/detalle/<%= producto.id %> ">
                  <%= producto.name %>
                </a>
              </td>
              <td>
                <a href="/products/detalle/<%= producto.id %> ">
                  <%= producto.marks[0].name %>
                </a>
              </td>
              <td>
                <a href="/products/detalle/<%= producto.id %> ">
                  <%= producto.price %>
                </a>
              </td>

            </tr>
            <tr>
              <td>
                <a href="/products/detalle/<%= producto.id %> ">
                  <img src="/images/<%= producto.images[0].file %>" alt="producto">
                </a>
              </td>
            </tr>
            <% }) %>


          </tbody>
        </table>
        <% } else{ %>
        <h3>No hay resultado para la búsqueda: <%= busqueda %></h3>

        <% } %>

      </main>

      <%- include ('./partials/footer') %>

  </body>
</html>
