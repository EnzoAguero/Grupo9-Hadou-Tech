<!DOCTYPE html>
<html lang="es">
  <%- include ('./partials/head')%>
  <body class="home">
    <%- include ('./partials/header')%>
    <main class="detalle">
      <section class="detalle-producto">
        <div class="detalle-producto-imagen">
          <div class="nombre-producto">
            <h4>
              <%= producto.name %>
              <%= producto.marks[0].name %>
            </h4>
          </div>
          <div>
            <hr>
          </div>
          <img src="/images/<%= producto.images[0].file %>" alt="producto">
          <div >
            <h5>
              <%= producto.description %>
            </h5>
          </div>
          <!--Botones para editar un producto-->
          <% if (locals.userLogin) { %>
          <% if (locals.userLogin.rol === "admin") { %>
          <div style="margin-top: 10px;">
            <a href="/products/edit/<%= producto.id %>" class="action-button">EDITAR PRODUCTO</a>
            <form id="formDelete" action="/products/remove/<%= producto.id %>?_method=DELETE" method="POST" style="display: inline-flex">
              <button type="submit" class="action-button" onclick="">ELIMINAR</button>
            </form>
            <button id="eliminar" type="submit" class="action-button" onclick="">ELIMINAR</button>
            <a href="/products/add/" class="action-button">CREAR PRODUCTO</a>
          </div>
          <% } %>
          <% } %>
          <!-- cambio modificado en la ruta -->
        </div>
        <div class="detalle-producto-descripcion">
          <div class="detalle-producto-precio">
            <div>
              <p class="valor">$<%= producto.price %>
              </p>
            </div>
            <p class="lista">Precio al contado $<%= producto.price %>
            </p>
          </div>
          <hr>
          <div class="detalle-producto-cuotas">
            <div class="icono">
              <i class="far fa-credit-card"></i>
            </div>
            <div>
              <p>
              <%= producto.cuotas %> cuotas sin interes de $<%=Math.round(producto.price /producto.cuotas) %> a
              precio de lista
              </p>
              <a style="color: blue;" href="#">Ver Cuotas</a>
            </div>
          </div>
          <hr>
          <div class="detalle-producto-retiro">
            <div class="icono">
              <i class="fas fa-home"> </i>
            </div>
            <div>
              <p>Retiro ¡GRATIS!</p>
            </div>
          </div>
          <hr>
          <div class="detalle-producto-envio">
            <div class="icono">
              <i class="fas fa-truck"></i>
            </div>
            <div>
              <p> Envio a todo el pais</p>
            </div>
          </div>
          <hr>
          <div class="detalle-producto-garantia">
            <div class="icono">
              <i class="fas fa-shield-alt"></i>
            </div>
            <div>
              <p>GARANTIA</p>
              <p>180 dias</p>
            </div>
          </div>
          <hr>
          <div class="detalle-producto-cantidad">
            <input class="cantidad" type="number" placeholder="Cantidad">
          </div>
          <div class="detalle-producto-boton">
            <div class="boton">
              <input class="boton" type="submit" value="Agregar al carrito">
            </div>
          </div>
          <hr>
          <div class="detalle-producto-retiro">
            <div class="icono">
              <i class="fas fa-home"> </i>
            </div>
            <div>
              <p>Retiro ¡GRATIS!</p>
            </div>
          </div>
          <hr>
          <div class="detalle-producto-envio">
            <div class="icono">
              <i class="fas fa-truck"></i>
            </div>
            <div>
              <p> Envio a todo el pais</p>
            </div>
          </div>
          <hr>
          <div class="detalle-producto-garantia">
            <div class="icono">
              <i class="fas fa-shield-alt"></i>
            </div>
            <div>
              <p>GARANTIA</p>
              <p>180 dias</p>
            </div>
          </div>
          <hr>
          <div class="detalle-producto-cantidad">
            <input class="cantidad" type="number" placeholder="Cantidad">
          </div>
          <div class="detalle-producto-boton">
            <div class="boton">
              <input class="boton" type="submit" value="Agregar al carrito">
            </div>

          </div>
          <div class="detalle-producto-redes">

            <a href="#"><i class="fab fa-facebook-square"></i></a>

          </div>
          <div class="detalle-producto-redes">

            <a href="#"><i class="fab fa-facebook-square"></i></a>

            <a href="#"><i class="fab fa-twitter-square"></i> </a>

            <a href="https://wa.me/+5493872196146" target="_blank"><i class="fab fa-whatsapp"></i> </a>

            <a href="#"><i class="fas fa-link"></i> </a>

          </div>
        </div>
      </section>
    </main>
    <%- include ('./partials/footer') %>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/javascripts/sweetalert.js"></script>
  </body>
</html>
