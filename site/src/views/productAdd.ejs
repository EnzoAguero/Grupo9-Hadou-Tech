<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head')  %> 
<body class="productAdd">
    <%- include('./partials/header')  %> 
    <div class="container">
        <div class="formulario mt-5">
          <h2>Agregar Producto</h2>
          <form action="/products/add" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="nombre" class="form-label">Nombre</label>
                  <input type="text" class="form-control" id="nombre" name="nombre">
                  <span class="text-danger small"><%= locals.errores && locals.errores.nombre ? errores.nombre.msg : null %> </span>
                </div>
                <div class="mb-3">
                  <label for="nombre" class="form-label">Marca</label>
                  <input type="text" class="form-control" id="marca" name="marca">
                  <span class="text-danger small"><%= locals.errores && locals.errores.marca ? errores.marca.msg : null %> </span>
                </div>
                <div class="mb-3">
                  <label for="precio" class="form-label">Precio</label>
                  <input type="number" class="form-control" id="precio" name="precio">
                  <span class="text-danger small"><%= locals.errores && locals.errores.precio ? errores.precio.msg : null %> </span>
                </div>
                <div class="mb-3">
                  <label for="imagen" class="form-label">Imagen</label>
                  <input type="file" class="form-control" name="imagen" id="imagen">
                  <span class="text-danger small"><%= locals.errores && locals.errores.imagen ? errores.imagen.msg : null %> </span>
                </div>
                <div class="mb-3">
                  <label for="cuotas" class="form-label">Cuotas</label>
                  <input type="number" class="form-control" name="cuotas" id="cuotas" value="">
                  <span class="text-danger small"><%= locals.errores && locals.errores.cuotas ? errores.cuotas.msg : null %> </span>
                </div>
                <button class="btn btn-primary" type="submit">Guardar</button>
            </form>
        </div>
    </div>
  
    <%- include('./partials/footer')  %> 
</body>
</html>
